<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>    

  <script>
    document.addEventListener("DOMContentLoaded", function() {
        const toastElement = document.getElementById('newsletterToast');
        const toast = new bootstrap.Toast(toastElement, {
            autohide: true,
            delay: 5000 // Automatically dismiss after 5 seconds
        });

        const urlParams = new URLSearchParams(window.location.search);
        const newsletterStatus = urlParams.get('newsletterStatus');

        console.log('Newsletter Status:', newsletterStatus); // Debugging line

        if (newsletterStatus === 'success') {
            toastElement.querySelector('.toast-body').textContent = "Newsletter sent successfully!";
            toast.show();
        } else if (newsletterStatus === 'failure') {
            toastElement.querySelector('.toast-body').textContent = "Failed to send the newsletter.";
            toast.show();
        }

        // Clear the newsletterStatus parameter from the URL
        if (newsletterStatus) {
            urlParams.delete('newsletterStatus'); // Remove the parameter
            history.replaceState(null, '', `${window.location.pathname}?${urlParams}`); // Update the URL without reloading
        }
    });
</script>
  
