            color: #007bff;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        /* About Section */
        .about-section, .achievements-section, .contact-section {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 1rem;
        }

        .about-section {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 1.5rem;
            background-color: #f9f9f9;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .teacher-photo img {
            width: 100%;
            max-width: 300px;
            border-radius: 50%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

        .teacher-photo img:hover {
            transform: scale(1.05);
        }

        .teacher-bio {
            flex: 1;
        }

        .teacher-bio h2 {
            color: #007bff;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        /* Achievements Section */
        .achievements-section h2 {
            font-size: 2rem;
            color: #007bff;
            text-align: center;
            margin-bottom: 1rem;
        }

        .achievements-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .achievement {
            background-color: #fff;
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .achievement:hover {
            transform: translateY(-5px);
        }

        /* Gallery Section */
        .gallery-section {
            padding: 2rem 1rem;
            text-align: center;
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
        }

        .gallery-grid img {
            width: 100%;
            border-radius: 8px;
            transition: transform 0.3s ease;
        }

        .gallery-grid img:hover {
            transform: scale(1.05);
        }

        /* Testimonials Section */
        .testimonials-section {
            text-align: center;
            padding: 2rem 1rem;
            background-color: #f7f7f7;
        }

        .testimonials blockquote {
            font-style: italic;
            color: #555;
            margin: 1rem auto;
            max-width: 600px;
        }

        .testimonials cite {
            display: block;
            margin-top: 0.5rem;
            font-weight: bold;
            color: #007bff;
        }

        /* Contact Section */
        .contact-section h2 {
            font-size: 2rem;
            color: #007bff;
            text-align: center;
            margin-bottom: 1rem;
        }

        .contact-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .contact-form label {
            text-align: left;
            font-weight: bold;
        }

        .contact-form input, .contact-form textarea {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .contact-form button {
            padding: 0.75rem;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .contact-form button:hover {
            background-color: #0056b3;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .teacher-photo img {
                max-width: 200px;
            }

            .about-section {
                flex-direction: column;
                text-align: center;
            }

            .achievements-grid, .gallery-grid {
                grid-template-columns: 1fr;
            }
        }        
    .journey-section {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .journey-section h2 {
        font-size: 2rem;
        color: #007bff;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .journey-timeline {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .journey-item {
        background-color: #fff;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        position: relative;
        transition: transform 0.3s ease;
    }

    .journey-item:hover {
        transform: translateY(-5px);
    }

    .journey-item h3 {
        font-size: 1.5rem;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .journey-item p {
        color: #555;
    }

    /* Adding a timeline style */
    .journey-item:before {
        content: '';
        position: absolute;
        top: 0;
        left: -10px;
        height: 100%;
        width: 5px;
        background-color: #007bff;
        border-radius: 5px;
    }

    .journey-item:first-child:before {
        top: 10px;
    }

    @media (max-width: 768px) {
