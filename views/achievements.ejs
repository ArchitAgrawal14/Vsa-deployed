<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Achievements</title>
    <link rel="stylesheet" href="/style/achievements.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <style>
   
    </style>
</head>
<body>
    <!-- Achievements Header -->
    <header class="achievements-header">
        <div class="container">
            <h1 class="display-4 animate__animated animate__fadeInUp">Our Achievements</h1>
            <p class="lead animate__animated animate__fadeInUp animate__delay-1s">
                Celebrating Milestones and Success
            </p>
        </div>
    </header>

    <!-- Achievements Section -->
    <div class="container">
        <% if (achievementData && achievementData.length > 0) { %>
            <div class="row">
                <% achievementData.forEach(function(achievement) { %>
                    <div class="col-md-4 achievement-card">
                        <div class="achievement-inner">
                            <div 
                                class="achievement-front" 
                                style="background-image: url('<%= achievement.img %>')"
                            >
                                <div class="overlay">
                                    <h3><%= achievement.name %></h3>
                                    <p>Medals Won: <%= achievement.medals_won %></p>
                                </div>
                            </div>
                            <div class="achievement-back">
                                <div class="achievement-back-content">
                                    <h4><%= achievement.name %></h4>
                                    <p><%= achievement.description %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center">
                <p class="alert alert-info">No achievements found.</p>
            </div>
        <% } %>
    </div>

    <!-- Toast Notification -->
    <% if (toastForNewsLetter) { %>
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100">
            <div class="toast" role="alert">
                <div class="toast-header">
                    <strong class="me-auto">Notification</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    Process Successfully completed.
                </div>
            </div>
        </div>
    <% } %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize toast
        document.addEventListener('DOMContentLoaded', function() {
            var toastEl = document.querySelector('.toast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });
    </script>
</body>
</html>