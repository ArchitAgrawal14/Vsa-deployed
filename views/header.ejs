  <style>
    :root {
    --primary-color: #2563eb;
    --secondary-color: #1e40af;
    --accent-color: #60a5fa;
    --text-light: #f8fafc;
    --text-dark: #1e293b;
}

body {
    margin: 0;
    font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
}

.modern-header {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    padding: 0.5rem;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.header-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
}

.logo img {
    max-height: 60px;
    transition: transform 0.3s ease;
}

.logo img:hover {
    transform: scale(1.05);
}

.nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
    margin: 0;
    padding: 0;
    list-style: none;
    transition: transform 0.3s ease-in-out;
}

.nav-links li {
    animation: fadeInDown 0.5s ease forwards;
    opacity: 0;
    animation-delay: calc(0.1s * var(--animation-order));
}

@keyframes fadeInDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.nav-links li a {
    color: var(--text-light);
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.nav-links li a:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
}

.dropdown-menu {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border: none;
    margin-top: 0.5rem;
    padding: 0.5rem 0;
    display: none;
    transition: all 0.3s ease-in-out;
    position: absolute;
    right: 0;
    min-width: 180px;
}

.dropdown-menu.show {
    display: block;
}

.dropdown-menu .dropdown-item {
    color: var(--text-dark);
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: background 0.3s ease;
}

.dropdown-menu .dropdown-item:hover {
    background: #f8fafc;
}

.mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--text-light);
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
}

@media (max-width: 992px) {
    .nav-links {
        gap: 1rem;
    }
    .nav-links li a {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
    }
    .dropdown-menu {
        right: auto;
        left: 50%;
        transform: translateX(-50%);
    }
}

@media (max-width: 768px) {
    .mobile-menu-btn {
        display: block;
        margin-left: auto;
    }
    .nav-links {
        position: fixed;
        top: 0;
        right: -100%;
        height: 100vh;
        width: 80%;
        max-width: 400px;
        background: var(--primary-color);
        flex-direction: column;
        padding: 4rem 2rem;
        transition: right 0.3s ease-in-out;
        z-index: 1001;
    }
    .nav-links.active {
    right: 0;
    display: flex; /* Ensures visibility */
}

    .nav-links li {
        width: 100%;
        margin: 1rem 0;
    }
    .nav-links li a {
        width: 100%;
        display: flex;
        justify-content: flex-start;
        padding: 0.75rem 1rem;
    }
    .nav-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }
    .nav-overlay.active {
        display: block;
    }
    .dropdown-menu {
        right: auto;
        left: 50%;
        transform: translateX(-50%);
    }
    
}

@media (max-width: 576px) {
    .header-container {
        padding: 0 1rem;
    }
    .dropdown-menu {
        right: auto;
        left: 50%;
        transform: translateX(-50%);
    }
}
/* Button to Reveal the Navigation */
.menu-button {
    display: none;
    padding: 10px 20px;
    background-color: #fff;
    /* margin-left: -10px; */
    color: #333;
    border: none;
    border-radius: 20px;
    font-size: 1rem;
    cursor: pointer;
    position: absolute;
    right: 10px;
    top: 20px;
    z-index: 101;
}

.menu-button:hover + .navigation ul {
    right: 0;
}

  </style>
  
